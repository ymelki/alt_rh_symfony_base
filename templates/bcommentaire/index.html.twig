{% extends 'base.html.twig' %}

{% block title %}Bcommentaire index{% endblock %}

{% block body %}
    <h1>Bcommentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bcommentaire in bcommentaires %}
            <tr>
                <td>{{ bcommentaire.id }}</td>
                <td>{{ bcommentaire.contenu }}</td>
                <td>
                    <a href="{{ path('app_bcommentaire_show', {'id': bcommentaire.id}) }}">show</a>
                    <a href="{{ path('app_bcommentaire_edit', {'id': bcommentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bcommentaire_new') }}">Create new</a>
{% endblock %}
